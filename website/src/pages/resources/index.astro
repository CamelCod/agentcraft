---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getResources } from '../../lib/notion';

const resources = await getResources();
const base = import.meta.env.BASE_URL;

// Group resources by type
const resourcesByType = resources.reduce((acc, resource) => {
  if (!acc[resource.type]) {
    acc[resource.type] = [];
  }
  acc[resource.type].push(resource);
  return acc;
}, {} as Record<string, typeof resources>);
---

<BaseLayout 
  title="Resources | AgentCraft"
  description="Download free templates, guides, checklists, and other resources for building AI agents."
>
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Page Header -->
    <section class="bg-gradient-to-r from-green-600 to-teal-600 text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Resources</h1>
        <p class="text-xl opacity-90">
          Free templates, guides, and tools to accelerate your agent development
        </p>
      </div>
    </section>
    
    <!-- Resources Grid -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {resources.length > 0 ? (
          <div class="space-y-12">
            {Object.entries(resourcesByType).map(([type, typeResources]) => (
              <div>
                <h2 class="text-2xl font-bold mb-6">{type}s</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                  {typeResources.map(resource => (
                    <article class="card group">
                      {resource.coverImage && (
                        <img 
                          src={resource.coverImage} 
                          alt={resource.title}
                          class="w-full h-48 object-cover"
                        />
                      )}
                      
                      <div class="p-6">
                        <div class="flex items-center gap-2 mb-3">
                          <span class="px-2 py-1 bg-green-100 text-green-700 rounded text-xs font-medium">
                            {resource.type}
                          </span>
                          {resource.gated ? (
                            <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded text-xs font-medium">
                              üîí Email Required
                            </span>
                          ) : (
                            <span class="px-2 py-1 bg-green-100 text-green-700 rounded text-xs font-medium">
                              ‚úì Free
                            </span>
                          )}
                        </div>
                        
                        <h3 class="text-xl font-bold mb-2 group-hover:text-primary-600 transition-colors">
                          {resource.title}
                        </h3>
                        
                        <p class="text-gray-600 mb-4">{resource.description}</p>
                        
                        {resource.tags.length > 0 && (
                          <div class="flex flex-wrap gap-1 mb-4">
                            {resource.tags.map(tag => (
                              <span class="px-2 py-0.5 bg-gray-100 text-gray-600 rounded text-xs">
                                {tag}
                              </span>
                            ))}
                          </div>
                        )}
                        
                        {resource.gated ? (
                          <button 
                            class="btn btn-primary w-full resource-download-btn"
                            data-resource-id={resource.id}
                            data-resource-title={resource.title}
                            data-download-link={resource.downloadLink || '#'}
                          >
                            Get Access
                          </button>
                        ) : (
                          <a 
                            href={resource.downloadLink || '#'} 
                            class="btn btn-primary w-full"
                            download
                            target="_blank"
                            rel="noopener noreferrer"
                          >
                            Download Now
                          </a>
                        )}
                      </div>
                    </article>
                  ))}
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="text-6xl mb-4">üì¶</div>
            <p class="text-gray-600 text-lg mb-4">No resources available yet.</p>
            <p class="text-gray-500">Check back soon for templates, guides, and more!</p>
          </div>
        )}
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<!-- Modal for Gated Resources -->
<div id="resource-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-lg max-w-md w-full p-8 relative">
    <button 
      id="close-modal"
      class="absolute top-4 right-4 text-gray-400 hover:text-gray-600"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    
    <h3 class="text-2xl font-bold mb-2" id="modal-title">Get Access</h3>
    <p class="text-gray-600 mb-6">Enter your email to download this resource</p>
    
    <form id="resource-form" class="space-y-4" data-base-url={base}>
      <input type="hidden" id="resource-id" name="resourceId" />
      <input type="hidden" id="resource-title" name="resourceTitle" />
      <input type="hidden" id="download-link" name="downloadLink" />
      
      <div>
        <label for="modal-name" class="block text-sm font-medium text-gray-700 mb-1">
          Name (optional)
        </label>
        <input 
          type="text" 
          id="modal-name" 
          name="name"
          placeholder="Your name"
          class="input"
        />
      </div>
      
      <div>
        <label for="modal-email" class="block text-sm font-medium text-gray-700 mb-1">
          Email <span class="text-red-500">*</span>
        </label>
        <input 
          type="email" 
          id="modal-email" 
          name="email"
          placeholder="you@example.com"
          required
          class="input"
        />
      </div>
      
      <button type="submit" class="btn btn-primary w-full" id="modal-submit">
        <span id="modal-button-text">Download Now</span>
        <span id="modal-button-loading" class="hidden">Processing...</span>
      </button>
      
      <div id="modal-message" class="hidden text-center p-3 rounded-lg"></div>
    </form>
  </div>
</div>

<script>
  // Modal functionality
  const modal = document.getElementById('resource-modal');
  const closeModal = document.getElementById('close-modal');
  const resourceForm = document.getElementById('resource-form') as HTMLFormElement;
  const downloadButtons = document.querySelectorAll('.resource-download-btn');
  
  downloadButtons.forEach(button => {
    button.addEventListener('click', () => {
      const resourceId = button.getAttribute('data-resource-id') || '';
      const resourceTitle = button.getAttribute('data-resource-title') || '';
      const downloadLink = button.getAttribute('data-download-link') || '';
      
      (document.getElementById('resource-id') as HTMLInputElement).value = resourceId;
      (document.getElementById('resource-title') as HTMLInputElement).value = resourceTitle;
      (document.getElementById('download-link') as HTMLInputElement).value = downloadLink;
      (document.getElementById('modal-title') as HTMLElement).textContent = `Get "${resourceTitle}"`;
      
      modal?.classList.remove('hidden');
    });
  });
  
  closeModal?.addEventListener('click', () => {
    modal?.classList.add('hidden');
  });
  
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.add('hidden');
    }
  });
  
  // Form submission
  resourceForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(resourceForm);
    const submitButton = document.getElementById('modal-submit') as HTMLButtonElement;
    const buttonText = document.getElementById('modal-button-text') as HTMLElement;
    const buttonLoading = document.getElementById('modal-button-loading') as HTMLElement;
    const message = document.getElementById('modal-message') as HTMLElement;
    const baseUrl = resourceForm.dataset.baseUrl || '';
    
    submitButton.disabled = true;
    buttonText.classList.add('hidden');
    buttonLoading.classList.remove('hidden');
    message.classList.add('hidden');
    
    try {
      const response = await fetch(`${baseUrl}api/subscribe`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          email: formData.get('email'),
          name: formData.get('name'),
          source: 'Resource',
          resourceDownloaded: formData.get('resourceTitle'),
          downloadLink: (document.getElementById('download-link') as HTMLInputElement).value
        })
      });
      
      const data = await response.json();
      
      if (response.ok) {
        message.textContent = '‚úÖ Success! Check your email for the download link.';
        message.classList.remove('hidden', 'bg-red-100', 'text-red-700');
        message.classList.add('bg-green-100', 'text-green-700');
        resourceForm.reset();
        
        // Redirect to download
        const downloadLink = (document.getElementById('download-link') as HTMLInputElement).value;
        if (downloadLink && downloadLink !== '#') {
          setTimeout(() => {
            window.open(downloadLink, '_blank');
            modal?.classList.add('hidden');
          }, 2000);
        }
      } else {
        throw new Error(data.error || 'Failed to submit');
      }
    } catch (error) {
      message.textContent = '‚ùå Something went wrong. Please try again.';
      message.classList.remove('hidden', 'bg-green-100', 'text-green-700');
      message.classList.add('bg-red-100', 'text-red-700');
    } finally {
      submitButton.disabled = false;
      buttonText.classList.remove('hidden');
      buttonLoading.classList.add('hidden');
    }
  });
</script>
